<launch>

  <arg name="show_rviz" default="true" />
  <arg name="pipeline" default="ompl" />

  <param name="/use_sim_time" value="true"/>

  <!-- Load the URDF, SRDF and other .yaml configuration files on the param server -->
  <include file="$(find mz04_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
  </include>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find mz04_moveit_config)/config/ros_controllers.yaml" command="load"/>

  <!-- Load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
        output="screen" args="arm_controller joint_state_controller"/>

  <!-- Given the published joint states, publish tf for the robot links -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
        respawn="true" output="screen">
  </node>

  <node pkg="roport" type="roport_robot_interface" name="roport_robot_interface" output="screen">
    <param name="joint_name_param_id" value="/move_group/hardware_interface/joints"/>
    <rosparam param="measure_joint_states_id">
      [
      "/mz04/measured_joint_states",
      ]
    </rosparam>
    <rosparam param="control_joint_states_id">
      [
      "cartesian/solution",
      ]
    </rosparam>
    <rosparam param="joint_states_group">
      <!-- Leave this as empty means control all joints -->
      []
    </rosparam>
    <rosparam param="joint_init_names">
      <!-- Names of the joints which need the initial positions not be 0 -->
      [
      "mz04_joint1", "mz04_joint2", "mz04_joint3", "mz04_joint4", "mz04_joint5", "mz04_joint6",
      ]
    </rosparam>
    <rosparam param="joint_init_positions">
      <!-- Positions of the joints which need the initial positions not be 0, better using double type -->
      [
      0., 0.3489, -0.3489, 0., -1.5708, 0.
      ]
    </rosparam>
  </node>

  <!--  hand-eye calibration: mz04_link0 camera_color_optical_frame -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="camera_link_broadcaster"
    args="0.309045 -0.0104731 0.982099   0.999115 -0.00655622 -0.0143316 -0.0389965 mz04_link0 camera_color_optical_frame" />

  <!-- Run MoveIt! -->
  <include file="$(find mz04_moveit_config)/launch/move_group.launch">
    <arg name="info" value="true"/>
    <!--  pilz_command_planner  -->
    <arg name="pipeline" value="$(arg pipeline)"/>
  </include>

  <group if="$(arg show_rviz)">
    <!-- Run Rviz and load the default config to see the state of the move_group node -->
    <include file="$(find mz04_moveit_config)/launch/moveit_rviz.launch">
      <arg name="rviz_config" value="$(find mz04_moveit_config)/launch/moveit.rviz"/>
    </include>
  </group>
</launch>
